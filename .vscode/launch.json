    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'suzaku-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=suzaku-cli",
                    "--package=suzaku-cli"
                ],
                "filter": {
                    "name": "suzaku-cli",
                    "kind": "bin"
                }
            },
            "args": [
                "analysis",
                "-s",
                "./temp/java_src",
                "-o",
                "./temp"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'suzaku-cli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=suzaku-cli",
                    "--package=suzaku-cli"
                ],
                "filter": {
                    "name": "suzaku-cli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'core'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=core"
                ],
                "filter": {
                    "name": "core",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}